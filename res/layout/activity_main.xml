<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <com.obriand.android_ardoisemagique.SingleTouchEventView
        android:id="@+id/draw_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        class="com.obriand.android_ardoisemagique.SingleTouchEventView"
        android:background="#00FFFF" />

    <TextView
        android:id="@+id/mainactivity_hello_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world"
        android:color="#000000" />

    <Button
        android:id="@+id/mainactivity_horizontal_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="btHorizontal"
        android:text="@string/mainactivity_horizontal_bt" />

    <Button
        android:id="@+id/mainactivity_vertical_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="btVertical"
        android:text="@string/mainactivity_vertical_bt" />

</RelativeLayout>